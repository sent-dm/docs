                  "availableChannels": "SMS,WHATSAPP",
                  "defaultChannel": "WHATSAPP",
                  "verified": true,
                  "createdAt": "2023-01-01T12:00:00Z",
                  "updatedAt": "2023-01-01T12:00:00Z"
