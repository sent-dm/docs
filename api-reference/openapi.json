{
  "openapi": "3.0.0",
  "info": {
    "title": "Sent.dm Core API",
    "version": "1.1.0",
    "description": "Sent.dm is a unified messaging API that enables developers to seamlessly send messages across multiple channels including SMS and WhatsApp. It provides programmatic management of customer accounts, messaging capabilities with intelligent routing, message delivery, and template management. The API supports creating, updating, and managing customer profiles, sending messages using templates, retrieving contact information, and handling templates across different messaging channels.",
    "contact": {
      "name": "Sent API Support",
      "email": "developers@sent.dm",
      "url": "https://www.sent.dm/"
    },
    "termsOfService": "https://www.sent.dm/resources/terms-of-service"
  },
  "tags": [
    {
      "name": "Contact",
      "description": "Lookup phone numbers and manage contacts with the Sent API"
    },
    {
      "name": "Messages",
      "description": "Send and manage messages across multiple channels with the Sent API"
    },
    {
      "name": "Templates",
      "description": "Create and manage message templates with the Sent API"
    },
    {
      "name": "Customers",
      "description": "Create, update, and manage customer accounts with the Sent API"
    },
    {
      "name": "SMS",
      "description": "Retrieve and manage SMS contact information and capabilities with the Sent API"
    },
    {
      "name": "Whatsapp",
      "description": "Retrieve and manage WhatsApp contact information and capabilities with the Sent API"
    }
  ],
  "paths": {
    "/contact/{customerId}/id/{id}": {
      "get": {
        "tags": [
          "Contact"
        ],
        "summary": "Retrieve a contact by ID",
        "description": "Fetches detailed contact information including available messaging channels and verification status. Use this endpoint when you need to look up a specific contact using their unique identifier.",
        "operationId": "getContactById",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "description": "Unique identifier of the customer account",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Unique identifier of the contact",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact details successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                },
                "example": {
                  "id": "123e4567-e89b-12d3-a456-426614174000",
                  "phoneNumber": "+1234567890",
                  "countryCode": "US",
                  "nationalFormat": "(123) 456-7890",
                  "availableChannels": "SMS,WHATSAPP",
                  "defaultChannel": "WHATSAPP",
                  "verified": true,
                  "createdAt": "2023-01-01T12:00:00Z",
                  "updatedAt": "2023-01-01T12:00:00Z"
                }
              }
            }
          },
          "401": {
            "description": "Authentication credentials are missing or invalid"
          },
          "404": {
            "description": "Contact not found"
          }
        },
        "security": [
          {
            "ApiKey": []
          },
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/contact/{customerId}/phone/{phoneNumber}": {
